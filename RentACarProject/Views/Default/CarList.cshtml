@model List<GetCarQueryResult>
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <title>Yüce Araç Kiralama</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/carrentals-master/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/carrentals-master/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/carrentals-master/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/carrentals-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/carrentals-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/carrentals-master/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/carrentals-master/css/aos.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/carrentals-master/css/style.css">

</head>

<body>


    <div class="site-wrap" id="home-section">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>



        <header class="site-navbar site-navbar-target" role="banner">

            <div class="container">
                <div class="row align-items-center position-relative">

                    <div class="col-3">
                        <div class="site-logo">
                            <a href="index.html"><strong>Anasayfa</strong></a>
                        </div>
                    </div>

                    <div class="col-9  text-right">

                        <span class="d-inline-block d-lg-none"><a href="#" class=" site-menu-toggle js-menu-toggle py-5 "><span class="icon-menu h3 text-black"></span></a></span>

                        <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav ml-auto ">
                                <li class="active"><a href="index.html" class="nav-link">Anasayfa</a></li>
                                <li><a href="/Default/CarList/" class="nav-link">Araç Listesi</a></li>
                                <li><a href="testimonials.html" class="nav-link">Referanslar</a></li>
                                <li><a href="blog.html" class="nav-link">Blog</a></li>
                                <li><a href="about.html" class="nav-link">Hakkımızda</a></li>
                                <li><a href="contact.html" class="nav-link">İletişim</a></li>
                            </ul>
                        </nav>
                    </div>


                </div>
            </div>

        </header>


        <div class="hero inner-page" style="background-image: url('/carrentals-master/images/hero_1_a.jpg');">

            <div class="container">
                <div class="row align-items-end ">
                    <div class="col-lg-5">

                        <div class="intro">
                            <h1><strong>Araçlar</strong></h1>
                            <div class="custom-breadcrumbs"><a href="index.html">Anasayafa</a> <span class="mx-2">/</span> <strong>Araçlar</strong></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="site-section bg-light">
            <div class="container">
                <div class="row">
                </div>


                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">

                            <div class="listing d-block  align-items-stretch">
                                <div class="listing-img h-100 mr-4">
                                    <img src="@item.ImageUrl" alt="Image" class="img-fluid">
                                </div>
                                <div class="listing-contents h-100">
                                    <h3>@item.Brand @item.Model</h3>
                                    <div class="rent-price">
                                        <strong>@item.Price</strong><span class="mx-1">/</span>Günlük
                                    </div>
                                    <div class="d-block d-md-flex mb-3 border-bottom pb-3">
                                        <div class="listing-feature pr-4">
                                            <span class="caption">Araç Km:</span>
                                            <span class="number">@item.KM</span>
                                        </div>
                                        <div class="listing-feature pr-4">
                                            <span class="caption">Benzin Türü:</span>
                                            <span class="number">@item.FuelType</span>
                                        </div>
                                        <div class="listing-feature pr-4">
                                            <span class="caption">Motor Gücü:</span>
                                            <span class="number">@item.MotorPower</span>
                                        </div>
                                    </div>
                                    <div>

                                        <p> <a href="#" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#Modal1-@item.CarId">Detaylar</a>  <a href="#" class="btn btn-primary btn-sm">Aracı Kirala</a> </p>


                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal" id="Modal1-@item.CarId" tabindex="-1">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title fw-bold"><b>@item.Brand @item.Model</b></h5><br />
                                    </div>
                                    <div class="modal-body">

                                        <img src="@item.ImageUrl" style="height:200px;" />
                                        <div class="card">
                                            <div class="card-header"><b>Araç Özellikleri</b></div>
                                            <div class="card-body p-3">
                                                <span class="caption"><b>Araç Km:</b> @item.KM</span><br />
                                                <span class="caption"><b>Vites Tipi:</b> @item.GearType</span><br />
                                                <span class="caption"><b>Benzin Tipi:</b> @item.FuelType</span><br />
                                                <span class="caption"><b>Motor Gücü:</b> @item.MotorPower</span><br />
                                                <span class="caption"><b>Kasa Tipi:</b> @item.BodyType</span><br />
                                                <span class="caption"><b>Günlük Fiyat:</b> @item.Price</span><br />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <h2 class="footer-heading mb-4">Sosyal Medya</h2>
                        <p>Sosyal Medya Hesaplarımızdan Bizleri Takip Edebilirsiniz.</p>
                        <ul class="list-unstyled social">
                            <li><a href="#"><span class="icon-facebook"></span></a></li>
                            <li><a href="#"><span class="icon-instagram"></span></a></li>
                            <li><a href="#"><span class="icon-twitter"></span></a></li>
                            <li><a href="#"><span class="icon-linkedin"></span></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-8 ml-auto">
                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="footer-heading mb-4">Linkler</h2>
                                <ul class="list-unstyled">
                                    <li><a href="#">Hakkımızda</a></li>
                                    <li><a href="#">Referanslar</a></li>
                                    <li><a href="#">Blog</a></li>
                                    <li><a href="#">Kullanım Şartları</a></li>
                                    <li><a href="#">Gizlilik</a></li>
                                    <li><a href="#">İletişim</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row pt-5 mt-5 text-center">
                    <div class="col-md-12">
                        <div class="border-top pt-5">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart text-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </footer>

    </div>


            <script src="~/carrentals-master/js/jquery-3.3.1.min.js"></script>
            <script src="~/carrentals-master/js/popper.min.js"></script>
            <script src="~/carrentals-master/js/bootstrap.min.js"></script>
            <script src="~/carrentals-master/js/owl.carousel.min.js"></script>
            <script src="~/carrentals-master/js/jquery.sticky.js"></script>
            <script src="~/carrentals-master/js/jquery.waypoints.min.js"></script>
            <script src="~/carrentals-master/js/jquery.animateNumber.min.js"></script>
            <script src="~/carrentals-master/js/jquery.fancybox.min.js"></script>
            <script src="~/carrentals-master/js/jquery.easing.1.3.js"></script>
            <script src="~/carrentals-master/js/bootstrap-datepicker.min.js"></script>
            <script src="~/carrentals-master/js/aos.js"></script>

            <script src="~/carrentals-master/js/main.js"></script>

</body>

</html>

